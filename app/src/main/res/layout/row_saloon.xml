<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    app:cardCornerRadius="12dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_saloonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_saloon"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:background="@drawable/round_outline"
            android:scaleType="fitXY"
            android:src="@drawable/dummy" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_saloon"
            android:paddingLeft="50px"
            android:paddingTop="10px"
            android:paddingRight="40px"
            android:paddingBottom="40px">

            <TextView
                android:id="@+id/tv_saloonname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mohit saloon"
                android:textColor="@color/black"
                android:textSize="60px" />

            <TextView
                android:id="@+id/tv_saloonaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_saloonname"
                android:text="mohit saloon"
                android:textColor="@color/darkergrey"
                android:layout_marginRight="150px"
                android:maxLines="2"
                android:textSize="30px" />

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1px"
                android:layout_marginRight="60px"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="4.4"
                android:textSize="40px" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>